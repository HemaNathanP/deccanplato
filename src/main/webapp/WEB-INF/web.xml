<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
version="3.0">
	<display-name>Megam - Deccan Plato</display-name>
	<servlet>
		<servlet-name>deccanplato</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>classpath:applicationContext.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>deccanplato</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deccanplato</servlet-name>
		<url-pattern>/provider/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deccanplato</servlet-name>
		<url-pattern>/provider/crm/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deccanplato</servlet-name>
		<url-pattern>/provider/crm/list/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deccanplato</servlet-name>
		<url-pattern>/provider/collaboration/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deccanplato</servlet-name>
		<url-pattern>/provider/collaboration/list/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deccanplato</servlet-name>
		<url-pattern>/provider/accounting/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deccanplato</servlet-name>
		<url-pattern>/provider/accounting/list/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deccanplato</servlet-name>
		<url-pattern>/provider/storage/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>deccanplato</servlet-name>
		<url-pattern>/provider/storage/list/*</url-pattern>
	</servlet-mapping>
</web-app>