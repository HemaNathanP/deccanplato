						<bean class="org.megam.deccanplato.provider.salesforce.handler.SolutionImpl" />
						<bean class="org.megam.deccanplato.provider.salesforce.handler.ProductImpl" />
						<bean class="org.megam.deccanplato.provider.salesforce.handler.CampaignImpl" />
